--// Pet Spawner GUI (with TextBox + Toggle + FadeIn + Rainbow Border + Notifications)

if game.CoreGui:FindFirstChild("PetSpawnerGui") then
	game.CoreGui.PetSpawnerGui:Destroy()
end

local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")
local StarterGui = game:GetService("StarterGui")

--// Main GUI
local PetSpawnerGui = Instance.new("ScreenGui")
PetSpawnerGui.Name = "PetSpawnerGui"
PetSpawnerGui.Parent = CoreGui
PetSpawnerGui.ResetOnSpawn = false

--// Toggle Button
local ToggleButton = Instance.new("TextButton")
ToggleButton.Parent = PetSpawnerGui
ToggleButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
ToggleButton.Size = UDim2.new(0, 120, 0, 35)
ToggleButton.Position = UDim2.new(0.02, 0, 0.15, 0)
ToggleButton.Font = Enum.Font.GothamBold
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleButton.TextSize = 14
ToggleButton.Text = "Toggle GUI"
ToggleButton.BackgroundTransparency = 0.2
Instance.new("UICorner", ToggleButton)

--// Frame
local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 300, 0, 280)
Frame.Position = UDim2.new(0.5, -150, 0.5, -140)
Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Frame.Visible = false
Frame.BackgroundTransparency = 1
Frame.Parent = PetSpawnerGui

local Corner = Instance.new("UICorner", Frame)
Corner.CornerRadius = UDim.new(0, 12)

--// Rainbow Border
local Border = Instance.new("UIStroke", Frame)
Border.Thickness = 2
Border.Color = Color3.fromRGB(255, 0, 0)

task.spawn(function()
	local hue = 0
	while task.wait(0.03) do
		hue = hue + 0.01
		if hue >= 1 then hue = 0 end
		Border.Color = Color3.fromHSV(hue, 1, 1)
	end
end)

--// Title
local Title = Instance.new("TextLabel")
Title.Text = "Pet Spawner"
Title.Font = Enum.Font.GothamBold
Title.TextSize = 22
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Size = UDim2.new(1, 0, 0, 40)
Title.BackgroundTransparency = 1
Title.Parent = Frame

--// Pet Name TextBox
local PetBox = Instance.new("TextBox")
PetBox.Parent = Frame
PetBox.PlaceholderText = "Enter pet name..."
PetBox.Font = Enum.Font.Gotham
PetBox.Text = ""
PetBox.TextSize = 18
PetBox.TextColor3 = Color3.fromRGB(255, 255, 255)
PetBox.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
PetBox.Size = UDim2.new(0.8, 0, 0, 40)
PetBox.Position = UDim2.new(0.1, 0, 0.2, 0)
Instance.new("UICorner", PetBox)

--// Pet Type Buttons
local ButtonsFrame = Instance.new("Frame", Frame)
ButtonsFrame.Size = UDim2.new(1, -20, 0, 50)
ButtonsFrame.Position = UDim2.new(0, 10, 0.4, 0)
ButtonsFrame.BackgroundTransparency = 1

local selected = nil
local buttonColors = {
	MFR = Color3.fromRGB(255, 120, 80),
	NFR = Color3.fromRGB(80, 255, 120),
	FR = Color3.fromRGB(100, 140, 255)
}

local function createButton(text, color, pos)
	local btn = Instance.new("TextButton")
	btn.Text = text
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 16
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.BackgroundColor3 = color
	btn.Size = UDim2.new(0, 80, 0, 40)
	btn.Position = pos
	btn.Parent = ButtonsFrame
	Instance.new("UICorner", btn)
	btn.MouseButton1Click:Connect(function()
		selected = text
		SelectedLabel.Text = "Selected: " .. text
	end)
	return btn
end

local mfr = createButton("MFR", buttonColors.MFR, UDim2.new(0, 0, 0, 0))
local nfr = createButton("NFR", buttonColors.NFR, UDim2.new(0, 100, 0, 0))
local fr = createButton("FR", buttonColors.FR, UDim2.new(0, 200, 0, 0))

--// Spawn Button
local SpawnButton = Instance.new("TextButton", Frame)
SpawnButton.Text = "Spawn Pet"
SpawnButton.Font = Enum.Font.GothamBold
SpawnButton.TextSize = 20
SpawnButton.TextColor3 = Color3.fromRGB(255, 255, 255)
SpawnButton.BackgroundColor3 = Color3.fromRGB(0, 120, 255)
SpawnButton.Size = UDim2.new(0.8, 0, 0, 45)
SpawnButton.Position = UDim2.new(0.1, 0, 0.65, 0)
Instance.new("UICorner", SpawnButton)

--// Selected Label
SelectedLabel = Instance.new("TextLabel", Frame)
SelectedLabel.Text = "Selected: None"
SelectedLabel.Font = Enum.Font.GothamBold
SelectedLabel.TextSize = 18
SelectedLabel.TextColor3 = Color3.fromRGB(255, 230, 0)
SelectedLabel.BackgroundTransparency = 1
SelectedLabel.Position = UDim2.new(0, 0, 0.86, 0)
SelectedLabel.Size = UDim2.new(1, 0, 0, 25)

--// Toggle Function
local function ToggleGUI()
	if Frame.Visible then
		local tween = TweenService:Create(Frame, TweenInfo.new(0.3), {BackgroundTransparency = 1})
		tween:Play()
		tween.Completed:Wait()
		Frame.Visible = false
	else
		Frame.Visible = true
		Frame.BackgroundTransparency = 1
		TweenService:Create(Frame, TweenInfo.new(0.4), {BackgroundTransparency = 0}):Play()
	end
end

ToggleButton.MouseButton1Click:Connect(ToggleGUI)

--// Auto Fade In on Execute
Frame.Visible = true
Frame.BackgroundTransparency = 1
TweenService:Create(Frame, TweenInfo.new(0.8), {BackgroundTransparency = 0}):Play()

--// Spawn Pet Notification
SpawnButton.MouseButton1Click:Connect(function()
	local petName = PetBox.Text ~= "" and PetBox.Text or "Unnamed Pet"
	if not selected then
		StarterGui:SetCore("SendNotification", {
			Title = "Pet Spawner",
			Text = "Please select a type first!",
			Duration = 3
		})
	else
		StarterGui:SetCore("SendNotification", {
			Title = "Pet Spawner",
			Text = "Spawned: " .. petName .. " (" .. selected .. ")",
			Duration = 4
		})
	end
end)
