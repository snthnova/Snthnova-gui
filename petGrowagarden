-- Snthnova Final Combined Script: Pet Predictor + Mutation Reroll + Age Changer + Randomizer
-- With Neon GUI, Welcome + Loading Screens

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local Workspace = game:GetService("Workspace")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- üåü EGG DATABASE (Pet Predictor)
local eggToPets = {
    ["Common Egg"]     = {"Dog", "Golden Lab", "Bunny"},
    ["Uncommon Egg"]   = {"Black Bunny", "Cat", "Chicken", "Deer"},
    ["Rare Egg"]       = {"Monkey", "Orange Tabby", "Pig", "Rooster", "Spotted Deer"},
    ["Legendary Egg"]  = {"Cow", "Silver Monkey", "Sea Otter", "Turtle", "Polar Bear"},
    ["Mythical Egg"]   = {"Grey Mouse", "Brown Mouse", "Squirrel", "Red Giant Ant", "Red Fox"},
    ["Bug Egg"]        = {"Snail", "Giant Ant", "Caterpillar", "Praying Mantis", "Dragonfly"},
    ["Bee Egg"]        = {"Bee", "Honey Bee", "Bear Bee", "Petal Bee", "Queen Bee"},
    ["Paradise Egg"]   = {"Ostrich", "Peacock", "Capybara", "Scarlet Macaw", "Mimic Octopus"},
    ["Oasis Egg"]      = {"Meerkat", "Sand Snake", "Axolotl", "Hyacinth Macaw"},
    ["Zen Egg"]        = {"Shiba Inu", "Nihonzaru", "Tanuki", "Tanchozuru", "Kappa", "Kitsune"},
    ["Dinosaur Egg"]   = {"Raptor", "Triceratops", "Stegosaurus", "Pterodactyl", "Brontosaurus", "T-Rex"},
    ["Primal Egg"]     = {"Parasaurolophus", "Iguanodon", "Pachycephalosaurus", "Dilophosaurus", "Ankylosaurus", "Spinosaurus"}
}

local function getRandomPet(egg)
    local list = eggToPets[egg]
    if list then
        return list[math.random(1, #list)]
    end
    return "Unknown"
end

-- üåÄ ESP Handling
local espList = {}
local function clearESP()
    for _, gui in ipairs(espList) do if gui then gui:Destroy() end end
    espList = {}
end

local function createESP(part, name)
    local gui = Instance.new("BillboardGui", part)
    gui.Name = "EggESP"
    gui.Size = UDim2.new(0, 100, 0, 40)
    gui.StudsOffset = Vector3.new(0, 2.5, 0)
    gui.AlwaysOnTop = true

    local label = Instance.new("TextLabel", gui)
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.Text = name
    label.TextColor3 = Color3.new(1, 1, 1)
    label.TextStrokeTransparency = 0.5
    label.Font = Enum.Font.GothamBold
    label.TextScaled = true

    table.insert(espList, gui)
end

local function randomizeEggs()
    clearESP()
    for _, obj in ipairs(Workspace:GetDescendants()) do
        if obj:IsA("Model") and eggToPets[obj.Name] then
            local part = obj:FindFirstChildWhichIsA("BasePart")
            if part then
                createESP(part, getRandomPet(obj.Name))
            end
        end
    end
end

-- ‚è≥ LOADING SCREEN
local loadingGui = Instance.new("ScreenGui", PlayerGui)
loadingGui.Name = "snthnovaLoading"
loadingGui.IgnoreGuiInset = true

local frame = Instance.new("Frame", loadingGui)
frame.Size = UDim2.new(0, 220, 0, 80)
frame.Position = UDim2.new(0.5, 0, 0.5, 0)
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0.4, 0)
title.Text = "snthnova"
title.Font = Enum.Font.FredokaOne
title.TextScaled = true
title.TextColor3 = Color3.fromRGB(255, 215, 0)
title.BackgroundTransparency = 1

local loading = Instance.new("TextLabel", frame)
loading.Size = UDim2.new(1, 0, 0.3, 0)
loading.Position = UDim2.new(0, 0, 0.4, 0)
loading.Text = "Loading"
loading.Font = Enum.Font.FredokaOne
loading.TextScaled = true
loading.TextColor3 = Color3.fromRGB(255, 215, 0)
loading.BackgroundTransparency = 1

local barBG = Instance.new("Frame", frame)
barBG.Size = UDim2.new(1, -20, 0, 10)
barBG.Position = UDim2.new(0, 10, 1, -20)
barBG.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

local bar = Instance.new("Frame", barBG)
bar.Size = UDim2.new(0, 0, 1, 0)
bar.BackgroundColor3 = Color3.fromRGB(255, 215, 0)

TweenService:Create(bar, TweenInfo.new(2), {Size = UDim2.new(1, 0, 1, 0)}):Play()

-- üîÑ Loading Done ‚Üí Welcome ‚Üí Main GUI
wait(3)
loadingGui:Destroy()

local welcome = Instance.new("ScreenGui", PlayerGui)
local wFrame = Instance.new("Frame", welcome)
wFrame.Size = UDim2.new(0, 260, 0, 100)
wFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
wFrame.AnchorPoint = Vector2.new(0.5, 0.5)
wFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)

local wText = Instance.new("TextLabel", wFrame)
wText.Size = UDim2.new(1, 0, 1, 0)
wText.Text = "Welcome to snthnova!"
wText.TextColor3 = Color3.fromRGB(255, 215, 0)
wText.BackgroundTransparency = 1
wText.Font = Enum.Font.FredokaOne
wText.TextScaled = true

wait(2)
welcome:Destroy()

-- üß™ Main GUI (Black Neon Theme)
local gui = Instance.new("ScreenGui", PlayerGui)
gui.Name = "snthnovaGUI"

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 220, 0, 170)
frame.Position = UDim2.new(0.01, 0, 0.4, 0)
frame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, -20, 0, 30)
title.Position = UDim2.new(0, 10, 0, 5)
title.Text = "Snthnova Toolkit"
title.TextColor3 = Color3.fromRGB(0, 255, 255)
title.Font = Enum.Font.FredokaOne
title.BackgroundTransparency = 1
title.TextScaled = true

local function createButton(txt, yPos, callback)
    local btn = Instance.new("TextButton", frame)
    btn.Size = UDim2.new(0.9, 0, 0, 30)
    btn.Position = UDim2.new(0.05, 0, 0, yPos)
    btn.Text = txt
    btn.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    btn.TextColor3 = Color3.fromRGB(0, 255, 255)
    btn.Font = Enum.Font.GothamBold
    btn.TextScaled = true
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
    btn.MouseButton1Click:Connect(callback)
end

createButton("Randomize Pet", 40, function()
    randomizeEggs()
end)

createButton("Set Age: Adult", 75, function()
    for _, v in ipairs(Workspace:GetDescendants()) do
        if v:IsA("Model") and v:FindFirstChild("Age") then
            v.Age.Value = "Adult"
        end
    end
end)

createButton("Reroll Mutation", 110, function()
    for _, v in ipairs(Workspace:GetDescendants()) do
        if v:IsA("Model") and v:FindFirstChild("Mutation") then
            v.Mutation.Value = math.random(1, 5)
        end
    end
end)
